<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Мир Эстетики"
        app:layout_constraintBottom_toTopOf="@+id/PromoImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/PromoImage"
        android:layout_width="410dp"
        android:layout_height="264dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:srcCompat="@drawable/promo" />

    <ImageView
        android:id="@+id/Liked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"

        app:layout_constraintBottom_toTopOf="@+id/PromoInfo"
        app:layout_constraintTop_toBottomOf="@+id/PromoImage"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <ImageView
        android:id="@+id/promoShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/PromoInfo"
        app:layout_constraintEnd_toStartOf="@+id/OldPrice"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/Liked"
        app:layout_constraintTop_toTopOf="@+id/Liked"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_menu_share"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/OldPrice"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="297dp"
        android:layout_marginLeft="297dp"

        android:lineSpacingExtra="8sp"
        android:text="556"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/NewPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/promoShare"
        app:layout_constraintTop_toBottomOf="@+id/PromoImage" />

    <TextView
        android:id="@+id/NewPrice"
        android:layout_width="wrap_content"
        android:layout_height="26dp"

        android:layout_marginBottom="8dp"
        android:text="446"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/PromoInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/OldPrice"
        app:layout_constraintTop_toBottomOf="@+id/OldPrice" />

    <TextView
        android:id="@+id/PromoInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"

        android:text="Центр красоты  Мир Эстетики рад подарить вам новогоднюю скидку 10% на все услуги!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewPrice" />





</androidx.constraintlayout.widget.ConstraintLayout>