<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewAddPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@android:dimen/notification_large_icon_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/editTextNamePSalonAddPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Называние салона"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAddPromo" />

    <EditText
        android:id="@+id/editTextNamePromoAddPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Называние Акции"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/editTextNamePSalonAddPromo"
        app:layout_constraintStart_toStartOf="@+id/editTextNamePSalonAddPromo"
        app:layout_constraintTop_toBottomOf="@+id/editTextNamePSalonAddPromo" />

    <EditText
        android:id="@+id/editTextOldPriseAddPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Старая цена"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/editTextNamePromoAddPromo"
        app:layout_constraintStart_toStartOf="@+id/editTextNamePromoAddPromo"
        app:layout_constraintTop_toBottomOf="@+id/editTextNamePromoAddPromo" />

    <EditText
        android:id="@+id/editTextNewPriseAddPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Новая цена"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/editTextOldPriseAddPromo"
        app:layout_constraintStart_toStartOf="@+id/editTextOldPriseAddPromo"
        app:layout_constraintTop_toBottomOf="@+id/editTextOldPriseAddPromo" />

    <Button
        android:id="@+id/buttonOkAddPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Опубликовать "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextDescNAddPromo"
        app:layout_constraintStart_toStartOf="@+id/editTextDescNAddPromo"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescNAddPromo"
        app:layout_constraintVertical_bias="0.07999998" />

    <EditText
        android:id="@+id/editTextDescNAddPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Описание"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextNewPriseAddPromo"
        app:layout_constraintStart_toStartOf="@+id/editTextNewPriseAddPromo"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewPriseAddPromo" />

</androidx.constraintlayout.widget.ConstraintLayout>