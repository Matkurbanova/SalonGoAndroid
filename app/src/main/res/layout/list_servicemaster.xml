<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewNameMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Камила"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/buttonPrice"
        app:layout_constraintStart_toEndOf="@+id/imageMaster"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPrice"
        android:layout_width="66dp"
        android:layout_height="21dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorforbutton"
        android:text="500 сом"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/NameOfService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/NameOfService"
        app:layout_constraintTop_toTopOf="@+id/NameOfService" />

    <TextView
        android:id="@+id/NameOfService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:text="Коррекция бровей"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewAddress"
        app:layout_constraintStart_toEndOf="@+id/imageMaster"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameMaster"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/WorkExperience"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Опыт работы:"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/NameOfService"
        app:layout_constraintTop_toBottomOf="@+id/NameOfService" />

    <TextView
        android:id="@+id/WorkExperienceYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="2 года"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/WorkExperience"
        app:layout_constraintStart_toEndOf="@+id/WorkExperience"
        app:layout_constraintTop_toTopOf="@+id/WorkExperience" />

    <TextView
        android:id="@+id/StatusBusy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="занята"
        android:textColor="@color/red"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewTellMaster"
        app:layout_constraintStart_toStartOf="@+id/textViewTellMaster"
        app:layout_constraintTop_toBottomOf="@+id/textViewTellMaster" />

    <TextView
        android:id="@+id/textViewTellMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+996 (706) 789 564"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/WorkExperience"
        app:layout_constraintTop_toBottomOf="@+id/WorkExperience" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_hinter"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>