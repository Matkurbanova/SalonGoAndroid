<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/fon"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Зарегистрироваться как:"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonPersonal"
        android:layout_width="197dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorforbutton"
        android:padding="6dp"
        android:text="Пользователь"

        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewtext" />

    <Button
        android:id="@+id/buttonSalon"
        android:layout_width="196dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorforbutton"
        android:padding="6dp"
        android:text="Салон красоты"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPersonal" />

    <Button
        android:id="@+id/buttonMaster"
        android:layout_width="197dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorforbutton"
        android:padding="6dp"
        android:text="Мастер"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSalon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Войти"
        android:textColor="@color/font"
        app:layout_constraintEnd_toEndOf="@+id/buttonMaster"
        app:layout_constraintStart_toStartOf="@+id/buttonMaster"
        app:layout_constraintTop_toBottomOf="@+id/buttonMaster" />
</androidx.constraintlayout.widget.ConstraintLayout>